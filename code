#include<stdio.h>
void main(){
 int i,n,sum,sum_2=0,sum_1=0;
 printf("enter the value of n:\n");
 scanf("%d",&n);
 for(i=1;i<=n;i++)
 {
   if(i%2==0){
    sum_1 = sum_1 +i;
   }
   else{
    sum_2 = sum_2 + i;
   }
 }
 sum = sum_1 + sum_2;
 printf("sum of even numbers= %d and sum of odd numbers = %d",sum_1,sum_2);
 printf("\nAnd the sum of all numbers is = %d",sum);
}
